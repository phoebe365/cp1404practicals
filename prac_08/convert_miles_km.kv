BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_max_x:
            id: user_input
            text: '0.0'
            font_size: 40
            multiline: False
            on_text: app.handle_calculate(self.text)
        BoxLayout:
            orientation:'vertical'
            size_hint_max_x: 100
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(user_input.text)

    Label:
        id: output_label
        text: app.message
        font_size: 44